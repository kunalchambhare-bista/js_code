<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="bista_training.trainee_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">

                        <div class="row">


                            <div class="column">
                                Name:
                                <span t-field="o.name"/>
                                <p></p>
                                Trainee ID:
                                <span t-field="o.trainee_id"/>
                                <p></p>
                                Employee Code:
                                <span t-field="o.employee_id"/>

                                <p></p>
                                 Linkedin:
                                <span t-field="o.linkedin_url"/>
                                <p></p>

                                DOJ:
                                <span t-field="o.date_of_joining"/>
                                <p></p>

                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>

</odoo>