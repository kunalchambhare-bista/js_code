<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_reject_reason_form" model="ir.ui.view">
        <field name="name">reject.reason.form</field>
        <field name="model">reject.reason</field>
        <field name="arch" type="xml">
            <form string="Reason for Rejection">
                <p class="oe_grey">
                    The Following Intern will be Rejected
                </p>
                <group>
                    <field name="trainee_name"/>
                    <field name="reject_reason"/>
                </group>
                <footer>
                    <button string="Reject Intern" name="reject_intern" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn_default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>